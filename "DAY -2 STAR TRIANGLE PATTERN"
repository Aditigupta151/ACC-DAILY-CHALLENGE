//program for printing star pattern 
#include <stdio.h>

int main()
{
int N =3;

    // first loop to print all rows
    for (int i = 0; i < N; i++) {

        // inner loop 1 to print white spaces
        for (int j = 0; j < 2 * (N - i) - 1; j++) {
            printf(" ");
        }

        // inner loop 2 to print star * character
        for (int k = 0; k < 2 * i + 1; k++) {
            printf("* ");
        }
        printf("\n");
    }
    return 0;
}
