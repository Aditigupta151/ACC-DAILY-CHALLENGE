// code for reverse of number

#include<iostream.h>
using namespace std;
int main()
{
int N,remainder;// n is integer value
int reversed_num =0;// initializing reversed number as 0
cout<<" enter the integer value:";
cin>>N;

while(N!=0) {
remainder = N%10;
reversed_num = reversed_num * 10 + remainder;
N/=10;
}

cout<<"reversed number is<< "reversed_num;

return 0;
}

